<h1>最新の記事一覧</h1>

<div class="row justify-content-md-center">
  <div class="col">
    <div class="row">
      <%= link_to @first_post.title, post_path(@first_post) %>
    </div>
    <div class="row">
      <%= link_to @first_post.user.name, user_path(@first_post.user) %>
    </div>
    <div class="row">
      <%= t @first_post.updated_at %>
    </div>
    <div class="row">
      <%= @first_post.content.truncate(30) %>
    </div>
  </div>
  <div class="col-6 mr-auto">
    <%= image_tag @first_post.picture_url, class: "img-thumbnail img-responsive" if @first_post.picture.present? %>
  </div>
</div>

<% @other_post.each_slice(2) do |left_post, right_post| %>
  <div class="row justify-content-md-center">
    <div class="col">
      <div class="row">
        <%= image_tag left_post.picture_url, class: "img-thumbnail img-responsive" if left_post.picture.present? %>
      </div>
      <div class="row">
        <%= link_to left_post.title, left_post %>
      </div>
      <div class="row">
        <%= link_to left_post.user.name, user_path(left_post.user) %>
      </div>
      <div class="row">
        <%= t left_post.updated_at %>
      </div>
    </div>
    <div class="col">
      <% if !right_post.nil? %>
        <div class="row">
          <%= image_tag right_post.picture_url, class: "img-thumbnail img-responsive" if right_post.picture.present? %>
        </div>
        <div class="row">
          <%= link_to right_post.title, right_post%>
        </div>
        <div class="row">
          <%= link_to right_post.user.name, user_path(right_post.user) %>
        </div>
        <div class="row">
          <%= t right_post.updated_at %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

<br>

<h1>新規ユーザー</h1>

<ul class= "new_users">
  <% @users.each do |user| %>
    <li>
      <%= image_tag user.image.url, class: "icon_image" %>
      <p>
        <%= link_to user.name, user %>
      </p>
    </li>
  <% end %>
</ul>

<div class= "under_link">
  <%= link_to "もっと見る", users_path %>
</div>