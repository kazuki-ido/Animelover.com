<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <%= link_to "アニメ好き.com", "/", class: "navbar-brand" %>
  <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="ナビゲーションの切替">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarForm">
    <ul class="navbar-nav ml-auto mr-sm-2">
      <% if user_signed_in? %>
        <li class="nav-item"><%= link_to 'マイページ', user_path(id: current_user.id), class: "nav-link"%></li>
        <li class="nav-item"><%= link_to 'ログアウト', destroy_user_session_path, class: "nav-link", method: :delete %></li>
      <% else %>
        <li class="nav-item"><%= link_to 'アカウント作成', new_user_registration_path, class: "nav-link"%></li>
        <li class="nav-item"><%= link_to 'ログイン', new_user_session_path, class: "nav-link"%></li>
      <% end %>
    </ul>

    <%= search_form_for @search, class: "form-inline my-2 my-lg-0" do |f| %>
      <%= f.search_field :title_cont, class: "form-control mr-sm-2", placeholder: "検索..." %>
      <%= f.submit class: "btn btn-success my-2 my-sm-0" %>
    <% end %>
  </div>
</nav>

<% flash.each do |name, message| %>
  <div class="alert alert-<%= name %> alert-dismissible fade show" role="alert">
    <%= message %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>