<h1>プロフィール編集</h1>

<%= form_with model: @user do |form| %>
  <div class="row form-group">
    <%= form.label :name, "名前" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>
  <div class="row form-group">
    <%= form.label :profile, "プロフィール" %>
    <%= form.text_area :profile, class: "form-control" %>
  </div>
  <div class="row form-group">
    <%= form.label :image, "アイコン" %>
    <%= form.file_field :image, class: "form-control-file" %>
  </div>
  <div class="row form-group">
    <%= form.label :picture, "ヘッダー画像" %>
    <%= form.file_field :picture, class: "form-control-file" %>
  </div>
  <div class="row">
    <%= form.submit "更新", class: "btn btn-primary btn-block" %>
  </div>
<% end %>