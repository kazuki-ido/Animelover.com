<% if user_signed_in? && @user == current_user %>
  <h1>マイページ</h1>
<% else %>
  <h1>ユーザーページ</h1>
<% end %>

<img src=<%= @user.image.url %> class = "icon_image">
<p>名前 : <%= @user.name %></p>
<p>誕生日 : <%= @user.birthday %></p>
<p>メールアドレス : <%= @user.email %></p>
<p>プロフィール : <%= @user.profile %></p>


<%= render "relationships/follow_button" , user: @user %>

<%= flash[:success] %>
<%= flash[:alert] %>